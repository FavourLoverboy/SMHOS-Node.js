<div class="row">
    <div class="col-md-12">
        <div class="card card-user">
            <div class="card-header">
                <h5 class="card-title">Add Church</h5>
            </div>
            <div class="card-body">
                <form action="/<%= page %>/add_church" method="post">
                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label for="continent">Continent</label>
                                <% if(errContinent){ %>
                                    <label style="color: red;"><%= errContinent %></label>
                                <% } %>
                                <input list="continent" name="continent" class="form-control continent" placeholder="Continets" value="<%= continent %>" required>
                                <datalist id="continent">
                                    <option value="Africa">
                                    <option value="Asia">
                                    <option value="Australia">
                                    <option value="Europe">
                                    <option value="North America">
                                    <option value="South America">
                                </datalist>
                            </div>
                        </div>
                        <div class="col-md-6 pl-1">
                            <div class="form-group">
                                <label for="country">Country</label>
                                <% if(errCountry){ %>
                                    <label style="color: red;"><%= errCountry %></label>
                                <% } %>
                                <input list="country" class="form-control country" name="country" placeholder="Country" value="<%= country %>" required>
                                <datalist id="country">
                                    <option value="Ghana">
                                    <option value="Nigeria">
                                    <option value="Togo">
                                </datalist>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label for="state">State</label>
                                <% if(errState){ %>
                                    <label style="color: red;"><%= errState %></label>
                                <% } %>
                                <input type="text" id="state" name="state" class="form-control" placeholder="State" value="<%= state %>" required>
                            </div>
                        </div>
                        <div class="col-md-6 pl-1">
                            <div class="form-group">
                                <label for="lga">LGA</label>
                                <% if(errLga){ %>
                                    <label style="color: red;"><%= errLga %></label>
                                <% } %>
                                <input type="text" id="lga" name="lga" class="form-control" placeholder="LGA" value="<%= lga %>" required>
                            </div>
                        </div>
                        <div class="col-md-12 pl-3">
                            <div class="form-group">
                                <label for="name">Name</label>
                                <% if(errName){ %>
                                    <label style="color: red;"><%= errName %></label>
                                <% } %>
                                <input type="text" id="name" name="name" class="form-control" placeholder="Name" value="<%= name %>" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="update ml-auto mr-auto">
                            <button type="submit" class="btn btn-success btn-round">Add Church</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>